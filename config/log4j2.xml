<configuration status="INFO">
	<appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{1} - %msg%n" />
		</Console>
		<RollingFile name="RollingFile" fileName="l2ovx.log"
			filePattern="l2ovx-%d{MM-dd-yyyy}-%i.log">
			<PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss} [%level] %logger{1} - %msg%n" />
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="10 MB" />
			</Policies>
		</RollingFile>
		<RollingFile name="web-display-log" fileName="web/web-display.log"
			filePattern="web-display-%d{MM-dd-yyyy}-%i.log">
			<PatternLayout pattern='{"date": "%d{yyy-MM-dd HH:mm:ss}", "level": "%p", "event":"%msg"}%n' />
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="10 MB" />
			</Policies>
		</RollingFile>
	</appenders>
	<loggers>
		<Logger name="web-display-log" level="debug" additivity="false">       
        	<appender-ref ref="web-display-log" level="debug"/>
   		</Logger>
		<root level="TRACE" includeLocation="false" additivity="false">
			<appender-ref ref="Console" level="INFO" />
			<appender-ref ref="RollingFile" level="INFO" />
		</root>
	</loggers>
</configuration>
